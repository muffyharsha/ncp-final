<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>personal_details</servlet-name>
        <servlet-class>personal_details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>work</servlet-name>
        <servlet-class>work</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>edit_bank</servlet-name>
        <servlet-class>edit_bank</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>view_bank</servlet-name>
        <servlet-class>view_bank</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>apply_leave</servlet-name>
        <servlet-class>apply_leave</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>leavehistory</servlet-name>
        <servlet-class>leavehistory</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>personal_details</servlet-name>
        <url-pattern>/personal_details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>work</servlet-name>
        <url-pattern>/work</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>edit_bank</servlet-name>
        <url-pattern>/edit_bank</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>view_bank</servlet-name>
        <url-pattern>/view_bank</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>apply_leave</servlet-name>
        <url-pattern>/apply_leave</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>leavehistory</servlet-name>
        <url-pattern>/leavehistory</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
